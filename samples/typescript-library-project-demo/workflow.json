{
  "$schema": "../../dist/schemas/schema.json",
  "projects": {
    "transpilations-bundles-test-demo": {
      "root": "./",
      "tasks": {
        "build": {
          "outputPath": "dist/transpilations-bundles-test-demo",
          "script": {
            "compilations": [
              {
                "declaration": true,
                "target": "ES2015",
                "outDir": "esm2015",
                "esBundle": {
                  "outputFile": "fesm2015/demo.js"
                }
              },
              {
                "declaration": false,
                "target": "es5",
                "outDir": "esm5",
                "esBundle": true,
                "umdBundle": {
                  "outputFile": "bundles/demo.umd.js"
                }
              }
            ],
            "tsConfig": "tsconfig.build.json",
            "addToPackageJson": true,
            "entry": "public_api.ts",
            "umdId": "demo",
            "peerDependenciesAsExternals": true,
            "dependenciesAsExternals": true,
            "externals": {
              "tslib": "tslib"
            }
          }
        },
        "test": {
          "karmaConfig": "karma.conf.js",
          "testIndexFile": "test/test.ts",
          "tsConfig": "tsconfig.test.json",
          "envOverrides": {
            "ci": {
              "reporters": ["progress", "kjhtml", "coverage-istanbul"],
              "codeCoverageExclude": [
                "**/test.ts",
                "**/index.ts",
                "**/public_api.ts"
              ],
              "browsers": [
                "ChromeHeadlessCI"
              ]
            }
          }
        }
      }
    },
    "transpilations-bundles-test-minimal-config-demo": {
      "root": "./",
      "tasks": {
        "build": {
          "script": {
            "compilations": "auto"
          }
        },
        "test": {}
      }
    },
    "bundles-only-demo": {
      "root": "./",
      "tasks": {
        "build": {
          "outputPath": "dist/bundles-only-demo",
          "script": {
            "bundles": [
              {
                "moduleFormat": "es",
                "outputFile": "demo.es.js",
                "sourceMap": true
              },
              {
                "moduleFormat": "umd",
                "outputFile": "demo.umd.js",
                "sourceMap": true,
                "minify": true,
                "commonjs": {
                  "extensions": [
                    ".ts",
                    ".js"
                  ]
                },
                "dependenciesAsExternals": false,
                "peerDependenciesAsExternals": false
              }
            ],
            "tsConfig": "tsconfig.build.json",
            "addToPackageJson": true,
            "entry": "public_api.ts",
            "umdId": "demo",
            "dependenciesAsExternals": true,
            "peerDependenciesAsExternals": true
          }
        }
      }
    }
  }
}
