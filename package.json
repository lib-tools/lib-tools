{
  "name": "lib-tools",
  "version": "3.0.0-dev.0",
  "description": "The lib-tools helps you simplify the build, bundle, test and npm packaging workflows for Typescript / JavaScript library projects and assets module projects.",
  "author": "Lib Tools Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lib-tools/lib-tools.git"
  },
  "bugs": {
    "url": "https://github.com/lib-tools/lib-tools/issues"
  },
  "homepage": "https://github.com/lib-tools/lib-tools",
  "keywords": [
    "lib-tools",
    "library-tools",
    "npm-packaging-tools",
    "library-packaging-tools",
    "library-testing-tools",
    "typescript-library-packaging",
    "style-library-packaging",
    "typescript",
    "sass",
    "scss",
    "postcss",
    "autoprefixer",
    "webpack",
    "rollup",
    "karma"
  ],
  "engines": {
    "node": ">=14"
  },
  "bin": {
    "lib": "./bin/lib.js"
  },
  "type": "module",
  "exports": "./dist/cli/index.js",
  "main": "dist/cli/index.js",
  "types": "dist/cli/index.d.ts",
  "scripts": {
    "lint": "eslint -c .eslintrc.json --ext .js,.ts .",
    "compile": "tsc --project tsconfig.build.json",
    "generate-schema": "node ./tools/generate-schema.js --input-type=module",
    "copy-files": "node ./tools/copy-files.js --input-type=module",
    "show-help": "node --enable-source-maps ./dist/bin/lib.js --help",
    "build": "npm run compile && npm run generate-schema && npm run copy-files && npm run show-help",
    "build:samples": "npm run build:sample:style-module-demo && npm run build:sample:typescript-library-project-demo",
    "test:samples": "npm run test:karma-cli-demo && npm run test:sample:typescript-library-project-demo",
    "build:sample:style-module-demo": "node ./dist/bin/lib build --workflow=samples/style-module-demo/workflow.json --version=1.0.0",
    "build:sample:typescript-library-project-demo": "node ./dist/bin/lib build --workflow=samples/typescript-library-project-demo/workflow.json --version=1.0.0",
    "test:karma-cli-demo": "karma start samples/typescript-library-project-demo/karma.conf.js --single-run --browsers=ChromeHeadlessCI --reporters=junit,coverage",
    "test:sample:typescript-library-project-demo": "node ./dist/bin/lib test --workflow=samples/typescript-library-project-demo/workflow.json --env.ci=true"
  },
  "dependencies": {
    "@jsdevtools/coverage-istanbul-loader": "^3.0.5",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "ajv": "^8.12.0",
    "autoprefixer": "^10.4.15",
    "builtins": "^5.0.1",
    "chalk": "^5.3.0",
    "cross-spawn": "^7.0.3",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "glob": "^10.3.3",
    "html-minifier": "^4.0.0",
    "jasmine-spec-reporter": "^7.0.0",
    "karma": "^6.4.2",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "karma-junit-reporter": "^2.0.1",
    "magic-string": "^0.30.2",
    "minimatch": "^9.0.3",
    "postcss": "^8.4.27",
    "rollup": "^3.28.0",
    "rollup-plugin-typescript2": "^0.35.0",
    "sass": "^1.65.1",
    "source-map-loader": "^4.0.1",
    "terser": "^5.19.2",
    "ts-loader": "^9.4.4",
    "typescript": "5.1.6",
    "webpack": "^5.88.2",
    "webpack-dev-middleware": "^6.1.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.2",
    "@types/glob": "^8.1.0",
    "@types/html-minifier": "^4.0.2",
    "@types/jasmine": "^4.3.5",
    "@types/jasminewd2": "~2.0.10",
    "@types/karma": "^6.3.4",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.5.0",
    "@types/supports-color": "^8.1.1",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsdoc": "^46.4.6",
    "eslint-plugin-prettier": "^5.0.0",
    "jasmine-core": "^5.1.0",
    "prettier": "^3.0.2",
    "typescript-json-schema": "^0.59.0"
  }
}
