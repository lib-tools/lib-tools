{
  "name": "lib-tools",
  "version": "1.0.0-beta.3",
  "description": "The lib-tools helps you simplify the build/bundle, test and npm packaging workflows for common library project types such as Typescript/JavaScript library projects, Angular library projects and Assets module projects (e.g. sass, scss, css or icons). This tool will automatically set up for you without the time spent with webpack, rollup, karma, postcss, autoprefixer or clean-css configuration files. You can start from zero-configuration to fully configurable options!",
  "author": "Lib Tools Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lib-tools/lib-tools.git"
  },
  "bugs": {
    "url": "https://github.com/lib-tools/lib-tools/issues"
  },
  "homepage": "https://github.com/lib-tools/lib-tools",
  "keywords": [
    "lib-tools",
    "library-tools",
    "npm-packaging-tools",
    "library-packaging-tools",
    "library-testing-tools",
    "angular-library-packaging",
    "typescript-library-packaging",
    "style-library-packaging",
    "angular",
    "typescript",
    "sass",
    "scss",
    "postcss",
    "autoprefixer",
    "webpack",
    "rollup",
    "karma"
  ],
  "engines": {
    "node": ">=10.9.0"
  },
  "bin": {
    "lib": "./bin/lib"
  },
  "experimental": true,
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint -c .eslintrc.json --ext .js,.ts .",
    "compile": "tsc --project tsconfig.build.json",
    "generate-schemas": "node tools/generate-schemas.js",
    "copy-files": "node tools/copy-files.js",
    "show-help": "node -r source-map-support/register dist/bin/lib --help",
    "build": "npm run compile && npm run generate-schemas && npm run copy-files && npm run show-help",
    "build:samples": "npm run build:sample:style-module-demo && npm run build:sample:typescript-library-project-demo && npm run build:sample:angular-library-project-demo",
    "test:samples": "npm run test:karma-cli-demo && npm run test:sample:typescript-library-project-demo && npm run test:sample:angular-library-project-demo",
    "build:sample:style-module-demo": "node -r source-map-support/register ./dist/bin/lib build --workflow=samples/style-module-demo/workflow.json --version=1.0.0",
    "build:sample:typescript-library-project-demo": "node -r source-map-support/register ./dist/bin/lib build --workflow=samples/typescript-library-project-demo/workflow.json --version=1.0.0",
    "build:sample:angular-library-project-demo": "node -r source-map-support/register ./dist/bin/lib build --workflow=samples/angular-library-project-demo/workflow.json",
    "test:karma-cli-demo": "karma start samples/typescript-library-project-demo/karma.conf.js --single-run --code-coverage --browsers=ChromeHeadlessCI --reporters=junit,coverage-istanbul",
    "test:sample:typescript-library-project-demo": "node ./dist/bin/lib test --workflow=samples/typescript-library-project-demo/workflow.json --env.ci=true",
    "test:sample:angular-library-project-demo": "node ./dist/bin/lib test --workflow=samples/angular-library-project-demo/workflow.json --env.ci=true"
  },
  "dependencies": {
    "@jsdevtools/coverage-istanbul-loader": "^3.0.5",
    "@ngtools/webpack": "^10.0.5",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "ajv": "^6.12.3",
    "autoprefixer": "^9.8.6",
    "builtins": "^3.0.1",
    "clean-css": "^4.2.3",
    "cross-spawn": "^7.0.3",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "html-minifier": "^4.0.0",
    "magic-string": "^0.25.7",
    "minimatch": "^3.0.4",
    "postcss": "^7.0.32",
    "resolve": "^1.17.0",
    "rollup": "^2.23.1",
    "rollup-plugin-typescript2": "^0.27.2",
    "sass": "^1.26.10",
    "source-map-loader": "^1.0.1",
    "supports-color": "^7.1.0",
    "terser": "^5.0.0",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7",
    "update-notifier": "^4.1.0",
    "webpack": "^4.44.1",
    "webpack-dev-middleware": "^3.7.2",
    "yargs": "^15.4.1",
    "karma": "^5.1.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-html-reporter": "^1.5.4",
    "jasmine-spec-reporter": "^5.0.2",
    "karma-junit-reporter": "^2.0.1",
    "jasmine-core": "^3.6.0"
  },
  "devDependencies": {
    "@angular/common": "^10.0.9",
    "@angular/compiler": "^10.0.9",
    "@angular/compiler-cli": "^10.0.9",
    "@angular/core": "^10.0.9",
    "@angular/platform-browser": "^10.0.9",
    "@angular/platform-browser-dynamic": "^10.0.9",
    "@types/autoprefixer": "^9.7.2",
    "@types/clean-css": "^4.2.2",
    "@types/cross-spawn": "^6.0.2",
    "@types/fs-extra": "^9.0.1",
    "@types/glob": "^7.1.3",
    "@types/html-minifier": "^4.0.0",
    "@types/jasmine": "^3.5.12",
    "@types/jasminewd2": "~2.0.8",
    "@types/karma": "^5.0.0",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^14.0.27",
    "@types/resolve": "^1.17.1",
    "@types/sass": "^1.16.0",
    "@types/supports-color": "^5.3.0",
    "@types/webpack": "^4.41.21",
    "@types/webpack-dev-middleware": "^3.7.1",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jsdoc": "^30.2.1",
    "eslint-plugin-prettier": "^3.1.4",
    "firebase": "^7.17.2",
    "prettier": "^2.0.5",
    "rxjs": "^6.6.2",
    "tsickle": "^0.39.1",
    "typescript-json-schema": "^0.42.0",
    "zone.js": "^0.10.3"
  }
}
