{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "strict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "sourceRoot": ".",
    "declaration": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": [
      "ES2020"
    ],
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist"
  }
}
