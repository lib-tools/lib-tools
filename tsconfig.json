{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",

    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "strict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "sourceRoot": ".",
    "declaration": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,

    "lib": [
      "es2018"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist"
  }
}
